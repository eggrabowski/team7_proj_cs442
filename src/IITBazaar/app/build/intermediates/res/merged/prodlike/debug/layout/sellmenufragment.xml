 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/sell_menu_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:checkedButton="@+id/sell_item_button">



        <RadioButton android:id="@+id/sell_selling_button"
            android:button="@null"
            android:padding="10dp"
            android:layout_width="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="1"
            android:textColor="@drawable/bg_key"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Selling"/>



        <RadioButton android:id="@+id/sell_item_button"
            android:button="@null"
            android:padding="10dp"
            android:layout_width="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="1"
            android:textColor="@drawable/bg_key"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Sell Item" />

        <RadioButton android:id="@+id/sell_null_button"
            android:button="@null"
            android:padding="10dp"
            android:layout_width="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="0"
            android:textColor="@drawable/bg_key"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="" />

    </RadioGroup>



</LinearLayout>


